<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.url">jdbc:mysql://localhost:3306/mydb</property>
    <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
      <mapping class="src.main.java.com.disenio.model.DireccionEntity"/>
      <mapping class="src.main.java.com.disenio.model.HabitacionEntity"/>
      <mapping class="src.main.java.com.disenio.model.HabitacionHasReservacionEntity"/>
      <mapping class="src.main.java.com.disenio.model.HotelEntity"/>
      <mapping class="src.main.java.com.disenio.model.ImagenEntity"/>
      <mapping class="src.main.java.com.disenio.model.ReservacionEntity"/>
      <mapping class="src.main.java.com.disenio.model.TarjetasEntity"/>
      <mapping class="src.main.java.com.disenio.model.TipoHabitacionEntity"/>
      <mapping class="src.main.java.com.disenio.model.UsuarioEntity"/>
      <!-- <property name="connection.username"/> -->
    <!-- <property name="connection.password"/> -->

    <!-- DB schema will be updated if needed -->
    <!-- <property name="hibernate.hbm2ddl.auto">update</property> -->
  </session-factory>
</hibernate-configuration>